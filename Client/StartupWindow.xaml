<Window x:Class="Client.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="StartupWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <TextBlock Text="Port" Margin="0,0,0,5"/>
        <TextBox Name="Port_TextBox" Margin="0,0,0,10" Text="5001"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Name="StartButton" Content="Sunucuyu Başlat" Width="120" Margin="0,0,10,0" Click="StartButton_Click"/>
            <Button Name="StopButton" Content="Sunucuyu Durdur" Width="120" Click="StopButton_Click"/>
        </StackPanel>
        <Button Name="SpecialButton" Content="İstenilen" Click="SpecialButton_Click" IsEnabled="False"/>
    </StackPanel>
</Window>
